<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	.featureSectionWrapper {
		margin-bottom: 120px;
	}
	.featureCard {
		width: 340px;
		height: 240px;
		background: var(--theme-surface-1);
		color: var(--theme-on-surface-1);
		padding: 20px;
	}
	.featureCardIcon {
		width: 2.5rem;
		height: 2.5rem;
		margin-right: 15px;
	}
	.featureCardTitleWrapper {
		display: flex;
		align-items: center;
		margin: 10px 0;
	}
	.featureCardTitleText {
		margin: 0;
	}
	.featureCardText {
		text-align: start;
		font-size: 0.9rem;
	}
	.featureTitle {
		text-align: center;
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
		.three-col-text__section {
			margin: 0 auto;
		}
		.three-col-text__column {
			margin: 0 auto;
		}
	}
</style>
